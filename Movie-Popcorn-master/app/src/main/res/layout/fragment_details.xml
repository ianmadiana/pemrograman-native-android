<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="212dp"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="100dp"
                android:adjustViewBounds="true"
                tools:layout_height="300dp"
                tools:src="@android:color/darker_gray" />

            <ToggleButton
                android:id="@+id/toggle_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_favorite_47_512"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_movie_poster"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:visibility="gone"
                tools:text="Avengers"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_rating"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_below="@id/tv_movie_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_star_86960" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_rating"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-22dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/iv_rating"
                android:visibility="gone"
                tools:text="Rating"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_popularity"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_below="@id/tv_rating"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_hashtag" />

            <TextView
                android:id="@+id/tv_popularity"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_popularity"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-22dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/iv_popularity"
                android:visibility="gone"
                tools:text="Popularity"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_popularity"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:text="Desc"
                tools:visibility="visible" />

        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>